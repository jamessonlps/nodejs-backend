{
  "openapi": "3.0.0",
  "info": {
    "title": "Sweet Home API",
    "description": "Web Service RESTfull desenvolvida para uma plataforma de serviços de aluguéis de imóveis",
    "contact": {
      "name": "Jamesson Leandro",
      "email": "jamessonlps@al.insper.edu.br"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/properties": {
      "get": {
        "tags": ["Propriedades"],
        "summary": "Lista todas as propriedades",
        "description": "Rota responsável por retornar um array contendo objetos de todas as propriedades disponíveis na base de dados",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "monthly_rate": {
                        "type": "number"
                      },
                      "available": {
                        "type": "boolean"
                      },
                      "broker": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string"
                      },
                      "city": {
                        "type": "string"
                      },
                      "district": {
                        "type": "string"
                      },
                      "street": {
                        "type": "string"
                      },
                      "number": {
                        "type": "number"
                      },
                      "complement": {
                        "type": "string"
                      },
                      "area": {
                        "type": "number"
                      },
                      "number_of_bathrooms": {
                        "type": "number"
                      },
                      "number_of_bedrooms": {
                        "type": "number"
                      },
                      "number_of_suites": {
                        "type": "number"
                      },
                      "isFurnished": {
                        "type": "boolean"
                      },
                      "aboutFurniture": {
                        "type": "string"
                      },
                      "pets": {
                        "type": "boolean"
                      },
                      "garage": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Propriedades"],
        "summary": "Cria uma propriedade",
        "description": "Rota responsável por criar uma nova propriedade na base de dados",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "monthly_rate": {
                    "type": "number"
                  },
                  "available": {
                    "type": "boolean"
                  },
                  "broker": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "district": {
                    "type": "string"
                  },
                  "street": {
                    "type": "string"
                  },
                  "number": {
                    "type": "number"
                  },
                  "complement": {
                    "type": "string"
                  },
                  "area": {
                    "type": "number"
                  },
                  "number_of_bathrooms": {
                    "type": "number"
                  },
                  "number_of_bedrooms": {
                    "type": "number"
                  },
                  "number_of_suites": {
                    "type": "number"
                  },
                  "isFurnished": {
                    "type": "boolean"
                  },
                  "aboutFurniture": {
                    "type": "string"
                  },
                  "pets": {
                    "type": "boolean"
                  },
                  "garage": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Criada com sucesso"
          }
        }
      }
    },
    "properties/images/{id}": {
      "post": {
        "tags": ["Propriedades"],
        "summary": "Cadastra imagens de propriedades",
        "description": "Rota responsável por fazer o upload de imagens referente a uma propriedade",
        "security": [
          {"bearerAuth": []}
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Property id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["Login"],
        "summary": "Autenticação de usuário",
        "description": "Autenticação de usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }

}